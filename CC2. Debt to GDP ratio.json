{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.2.0.json",
  "title": {
    "text": "Debt to GDP ratio in Japan",
    "anchor": "start",
    "subtitle": "Ratio, % GDP | Source: JSB (WB) through ECO API",
    "fontSize": "14",
    "subtitleFontSize": "12",
    "color": "#000000",
    "subtitleColor": "#000000"
  },
  "height": "400",
  "width": "440",
  "autosize": {"type": "fit", "contains": "padding"},
  "background": "#ffffff",
  "view": {"fill": "#ffffff", "strokeOpacity": 0},
  "data": {
    "url": "https://api.economicsobservatory.com/jpn/debt?vega",
    "format": {"type": "json"}
  },
  "mark": {"type": "bar", "color": "#ff2929", "strokeWidth": "2"},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"title": "Year", "titleColor": "#122B39", "grid": false}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {"title": "Debt", "titleColor": "#122B39", "grid": false}
    }
  },
  "config": {}
}
