{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "GDP scale in OECD countries (US $)",
    "subtitle": ["Source: OECD 2023"],
    "anchor": "middle"
  },

  "data": {
    "url": "https://raw.githubusercontent.com/EconomicsObservatory/courses/main/datasets/advanced/map_world.geojson",
    "format": {"property": "features"}
  },

  "width": "container",
  "height": 500,

  "padding": {"left": 10, "right": 10, "top": 10, "bottom": 30},

  "autosize": {"type": "fit"},

  "projection": {
    "type": "naturalEarth1",
    "center": [0, 15]
  },

  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "white",
        "stroke": "#cfcfcf",
        "strokeWidth": 0.4
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.ISO3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Sho-coder0/Sho-coder0.github.io/main/Project_OECD_GDP.csv",
              "format": {"type": "csv"}
            },
            "key": "ISO3",
            "fields": ["Country", "value"]
          }
        },
        {"calculate": "toNumber(datum.value)", "as": "value_num"},
        {"filter": "isValid(datum.value_num) && datum.value_num > 0"}
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.3},
      "encoding": {
        "color": {
          "field": "value_num",
          "type": "quantitative",
          "scale": {"type": "log", "scheme": "viridis"},
          "legend": {
            "title": "",
            "format": "$,d",
            "orient": "bottom",
            "direction": "horizontal",
            "gradientLength": 260
          }
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "value_num", "title": "GDP", "format": "$,d"}
        ]
      }
    }
  ]
}
